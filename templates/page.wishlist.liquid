<div class="full-width-container wishlist-container">
  <!-- Hero Banner -->
  <div class="wishlist-hero">
    <h1 class="wishlist-hero--title">{{ page.title }}</h1>
  </div>
  <!-- Product Tile Grid -->
  <div class="wishlist-grid flex">
    {% for product in collections.all.products %}
    {% include 'product-tile' %}
    {% endfor %}
    <div class="wishlist-grid--empty-list flex">
      <div class="empty-list--info">
        <h6 class="empty-list--text black">{{ 'general.wishlist_page.empty_wishlist_content' | t }}</h6>
        <a class="btn btn-primary empty-list--btn" href="/collections/all">{{ 'general.wishlist_page.shopping_button' | t }}</a>
      </div>
    </div>
  </div>
  <!-- Loader -->
  <div class="wishlist-loader">
    <img class="wishlist-loader--image" src="{{ 'wish_icon.png' | asset_url }}" alt="Wishlist loading">
    <p class="wishlist-loader--text">{{ 'general.wishlist_page.wishlist_loading' | t }}</p>
  </div>
</div>
